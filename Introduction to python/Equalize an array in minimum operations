// Back-end complete function Template for C++

class Solution{
public:
    // Function to equalize the array by finding the minimum number of operations
    int equalizeArray(int N, int k, int A[]){
        int mod = 1000000007; // setting the modulo value
        int modulo = A[0]%k; // calculating the modulo of the first element
        for(int i = 1;i < N;i++){ // checking if all elements have the same modulo
            if(A[i]%k != modulo)
                return -1; // return -1 if not all elements  have the same modulo
        }
        sort(A, A+N); // sorting the array
        int ans = 0, median = A[N/2]; // initializing the answer and finding the median
        for(int i = 0;i < N;i++){ // calculating the number of operations
            ans += abs(median - A[i])/k; // adding the absolute difference divided by k
            ans = ans%mod; // taking the modulo of the answer
        }
        return ans; // return the final answer
    }
};
