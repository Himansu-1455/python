class Solution:

    # Function to reverse elements in the list between indices start and end
    def reverseList(self, arr, start, end):
        while start < end:
            arr[start], arr[end] = arr[end], arr[start]
            start += 1
            end -= 1

    def rotateDeque(self, dq, type, k):
        n = len(dq)

        # If deque is empty, nothing to rotate
        if n == 0:
            return

        # Use modulo to avoid unnecessary full rotations
        k = k % n
        if k == 0:
            return

        # Convert deque to list for index-based operations
        arr = list(dq)

        # Right rotation (clockwise)
        if type == 1:
            self.reverseList(arr, 0, n - 1)
            self.reverseList(arr, 0, k - 1)
            self.reverseList(arr, k, n - 1)

        # Left rotation (anti-clockwise)
        elif type == 2:
            self.reverseList(arr, 0, k - 1)
            self.reverseList(arr, k, n - 1)
            self.reverseList(arr, 0, n - 1)

        # Clear the original deque and update it with rotated elements
        dq.clear()
        dq.extend(arr)
